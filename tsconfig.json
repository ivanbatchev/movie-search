{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": ["node_modules, server.js"]
}
